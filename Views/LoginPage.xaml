<Page
    x:Class="WSEIDziekanat.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Background="{ThemeResource CardBackgroundFillColorDefault}" MaxWidth="400" Padding="0,12,0,12"
                    VerticalAlignment="Center" Margin="0,0,0,64" CornerRadius="5">
            <TextBox x:Name="loginBox" Header="Login" MaxLength="64" Margin="16,8,16,8" IsSpellCheckEnabled="False" IsTextPredictionEnabled="False"/>
            <PasswordBox x:Name="passwordBox" Header="Hasło" MaxLength="64" Margin="16,8,16,8"/>
            <Button  Margin="16,16,16,8" HorizontalAlignment="Stretch">
                Zaloguj się
            </Button>
        </StackPanel>
    </Grid>
</Page>